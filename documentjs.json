{
    "versions": {
        "0.0.1": {
            "source": "https://github.com/bitovi-components/bit-graph#master",
            "sites": {
                "docs": {
                    "glob": {
                        "ignore": ["{node_modules}/**/*", "README.md"]
                    },
                    "parent": "graph",
                    "dest" : "../docs"
                }
            }
        }
    },
    "defaultVersion": "0.0.1",
    "versionDest": "<%= version %>",
    "siteDefaults": {
        "templates": "theme/templates",
        "static": "theme/static"
    },
    "sites": {
        "pages": {
            "glob": "_pages/*.md",
            "parent": "index",
            "dest" : ".",
            "pageConfig": {"page":"index"}
        }
    }
}
